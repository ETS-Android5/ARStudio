<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="210dp"
    android:id="@+id/audioPlayerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/AudioImage"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <com.gauravk.audiovisualizer.visualizer.CircleLineVisualizer
            android:id="@+id/CircleViz"
            android:layout_width="145dp"
            android:layout_height="145dp"
            custom:avColor="@color/av_dark_blue"
            custom:avDensity="0.8"
            custom:avSpeed="normal"
            android:visibility="gone"
            custom:avType="fill" />

        <com.gauravk.audiovisualizer.visualizer.WaveVisualizer
            android:id="@+id/WaveViz"
            android:layout_width="145dp"
            android:layout_height="145dp"
            custom:avColor="@color/av_dark_blue"
            custom:avDensity="0.8"
            custom:avSpeed="normal"
            android:visibility="gone"
            custom:avType="fill" />

        <com.gauravk.audiovisualizer.visualizer.BlobVisualizer
            android:id="@+id/BlobViz"
            android:layout_width="145dp"
            android:layout_height="145dp"
            custom:avColor="@color/av_dark_blue"
            custom:avDensity="0.8"
            custom:avSpeed="normal"
            android:visibility="gone"
            custom:avType="fill" />

        <com.gauravk.audiovisualizer.visualizer.BarVisualizer
            android:id="@+id/BarViz"
            android:layout_width="145dp"
            android:layout_height="145dp"
            custom:avColor="@color/av_dark_blue"
            custom:avDensity="0.8"
            custom:avSpeed="normal"
            android:visibility="gone"
            custom:avType="fill" />

        <com.gauravk.audiovisualizer.visualizer.BlastVisualizer
            android:id="@+id/BlastViz"
            android:layout_width="145dp"
            android:layout_height="145dp"
            custom:avColor="@color/av_dark_blue"
            custom:avDensity="0.8"
            custom:avSpeed="normal"
            android:visibility="gone"
            custom:avType="fill" />
    </LinearLayout>






    <ImageButton
        android:layout_margin="10dp"
        android:id="@+id/AudioPlayButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:background="#00FFFFFF"
        android:src="@drawable/stop" />

    <ImageButton
        android:layout_margin="10dp"
        android:id="@+id/AudioPauseButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="#00FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/pause" />

</RelativeLayout>